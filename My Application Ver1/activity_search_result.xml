<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchResultActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/navigation_bar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:background="@drawable/background_image_main_bull">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="0dp"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:src="@drawable/image1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="1.0"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="16dp"
                android:outlineProvider="background"
                android:clipToOutline="true"
                android:radius="500dp"/>


            <View
                android:id="@+id/overlayView1"
                android:layout_width="0dp"
                android:layout_height="250dp"
                android:background="#80000000"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="@id/imageView1"
                app:layout_constraintBottom_toBottomOf="@id/imageView1"
                app:layout_constraintStart_toStartOf="@id/imageView1"
                app:layout_constraintEnd_toEndOf="@id/imageView1" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ссылка"
                android:textSize="50sp"
                android:clickable="true"
                android:textColor="@android:color/white"
                android:layout_marginTop="19dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/imageView1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="News"
                android:textSize="20sp"
                android:visibility="gone"
                android:background="@drawable/transparent_button_background"
                android:textColor="@android:color/white"
                app:layout_constraintTop_toTopOf="@id/imageView1"
                app:layout_constraintBottom_toBottomOf="@id/imageView1"
                app:layout_constraintStart_toStartOf="@id/imageView1"
                app:layout_constraintEnd_toEndOf="@id/imageView1" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="0dp"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:src="@drawable/image2"
                app:layout_constraintTop_toBottomOf="@id/imageView1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="1.0"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/rounded_corners_search"/>

            <View
                android:id="@+id/overlayView2"
                android:layout_width="0dp"
                android:layout_height="250dp"
                android:background="#80000000"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="@id/imageView2"
                app:layout_constraintBottom_toBottomOf="@id/imageView2"
                app:layout_constraintStart_toStartOf="@id/imageView2"
                app:layout_constraintEnd_toEndOf="@id/imageView2" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="@id/imageView2"
                app:layout_constraintBottom_toBottomOf="@id/imageView2"
                app:layout_constraintStart_toStartOf="@id/imageView2"
                app:layout_constraintEnd_toEndOf="@id/imageView2" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Races"
                android:textSize="20sp"
                android:visibility="gone"
                android:background="@drawable/transparent_button_background"
                android:textColor="@android:color/white"
                app:layout_constraintTop_toTopOf="@id/imageView2"
                app:layout_constraintBottom_toBottomOf="@id/imageView2"
                app:layout_constraintStart_toStartOf="@id/imageView2"
                app:layout_constraintEnd_toEndOf="@id/imageView2" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="0dp"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:src="@drawable/image4"
                app:layout_constraintTop_toBottomOf="@id/imageView2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="1.0"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/rounded_corners_search"/>


            <View
                android:id="@+id/overlayView3"
                android:layout_width="0dp"
                android:layout_height="250dp"
                android:background="#80000000"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="@id/imageView3"
                app:layout_constraintBottom_toBottomOf="@id/imageView3"
                app:layout_constraintStart_toStartOf="@id/imageView3"
                app:layout_constraintEnd_toEndOf="@id/imageView3" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="@id/imageView3"
                app:layout_constraintBottom_toBottomOf="@id/imageView3"
                app:layout_constraintStart_toStartOf="@id/imageView3"
                app:layout_constraintEnd_toEndOf="@id/imageView3" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dates"
                android:textSize="20sp"
                android:visibility="gone"
                android:background="@drawable/transparent_button_background"
                android:textColor="@android:color/white"
                app:layout_constraintTop_toTopOf="@id/imageView3"
                app:layout_constraintBottom_toBottomOf="@id/imageView3"
                app:layout_constraintStart_toStartOf="@id/imageView3"
                app:layout_constraintEnd_toEndOf="@id/imageView3" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="0dp"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:src="@drawable/image5"
                app:layout_constraintTop_toBottomOf="@id/imageView3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="1.0"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/rounded_corners_search"/>


            <View
                android:id="@+id/overlayView4"
                android:layout_width="0dp"
                android:layout_height="250dp"
                android:background="#80000000"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="@id/imageView4"
                app:layout_constraintBottom_toBottomOf="@id/imageView4"
                app:layout_constraintStart_toStartOf="@id/imageView4"
                app:layout_constraintEnd_toEndOf="@id/imageView4" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="@id/imageView4"
                app:layout_constraintBottom_toBottomOf="@id/imageView4"
                app:layout_constraintStart_toStartOf="@id/imageView4"
                app:layout_constraintEnd_toEndOf="@id/imageView4" />

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Photo"
                android:textSize="20sp"
                android:visibility="gone"
                android:background="@drawable/transparent_button_background"
                android:textColor="@android:color/white"
                app:layout_constraintTop_toTopOf="@id/imageView4"
                app:layout_constraintBottom_toBottomOf="@id/imageView4"
                app:layout_constraintStart_toStartOf="@id/imageView4"
                app:layout_constraintEnd_toEndOf="@id/imageView4" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="0dp"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:src="@drawable/image3"
                app:layout_constraintTop_toBottomOf="@id/imageView4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="1.0"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/rounded_corners_search"/>

            <View
                android:id="@+id/overlayView5"
                android:layout_width="0dp"
                android:layout_height="250dp"
                android:background="#80000000"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="@id/imageView5"
                app:layout_constraintBottom_toBottomOf="@id/imageView5"
                app:layout_constraintStart_toStartOf="@id/imageView5"
                app:layout_constraintEnd_toEndOf="@id/imageView5" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="@id/imageView5"
                app:layout_constraintBottom_toBottomOf="@id/imageView5"
                app:layout_constraintStart_toStartOf="@id/imageView5"
                app:layout_constraintEnd_toEndOf="@id/imageView5" />

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="History"
                android:textSize="20sp"
                android:visibility="gone"
                android:background="@drawable/transparent_button_background"
                android:textColor="@android:color/white"
                app:layout_constraintTop_toTopOf="@id/imageView5"
                app:layout_constraintBottom_toBottomOf="@id/imageView5"
                app:layout_constraintStart_toStartOf="@id/imageView5"
                app:layout_constraintEnd_toEndOf="@id/imageView5" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/black"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Navigation Item A -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/icon_a"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/iconshome"/>

            <TextView
                android:id="@+id/nav_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="a"
                android:textColor="@android:color/white"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- Navigation Item B -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/icon_b"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/iconsnews"/>

            <TextView
                android:id="@+id/nav_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="b"
                android:textColor="@android:color/white"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- Navigation Item C -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/icon_c"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/iconsflag"/>

            <TextView
                android:id="@+id/nav_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="c"
                android:textColor="@android:color/white"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- Navigation Item D -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/icon_d"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/iconshome"/>

            <TextView
                android:id="@+id/nav_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="d"
                android:textColor="@android:color/white"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- Navigation Item E -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/icon_e"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/iconshome"/>

            <TextView
                android:id="@+id/nav_e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="e"
                android:textColor="@android:color/white"
                android:textSize="12sp"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
