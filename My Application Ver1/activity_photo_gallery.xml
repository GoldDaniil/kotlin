<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPagerTop"
            android:layout_width="match_parent"
            android:layout_height="500dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@android:color/white"/>

        <View
            android:id="@+id/overlayViewTop"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:background="#80000000" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPagerSecond"
            android:layout_width="match_parent"
            android:layout_height="400dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@android:color/white"/>

        <!-- Dark overlay for the first image in the second row -->
        <View
            android:id="@+id/overlayViewSecond"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="#80000000" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPagerThird"
            android:layout_width="match_parent"
            android:layout_height="600dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@android:color/white"/>

        <View
            android:id="@+id/overlayViewThird"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:background="#80000000" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPagerBottom"
            android:layout_width="match_parent"
            android:layout_height="500dp"/>

        <View
            android:id="@+id/overlayViewBottom"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:background="#80000000" />

    </LinearLayout>
</ScrollView>
