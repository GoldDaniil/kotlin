<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".MoreActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/navigation_bar"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/link_calculator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CALCULATOR"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/link_text_color"
                android:padding="16dp"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:shadowColor="@color/shadow_color"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="3" />

            <TextView
                android:id="@+id/link_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SETTINGS"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/link_text_color"
                android:padding="16dp"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:shadowColor="@color/shadow_color"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="3" />

            <TextView
                android:id="@+id/link_social_wall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SOCIAL WALL"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/link_text_color"
                android:padding="16dp"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:shadowColor="@color/shadow_color"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="3" />

            <TextView
                android:id="@+id/link_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PHOTO"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/link_text_color"
                android:padding="16dp"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:shadowColor="@color/shadow_color"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="3" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_alignParentBottom="true"
        android:background="@color/navigation_bar_color"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="2dp">

        <LinearLayout
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="2dp">

            <ImageView
                android:id="@+id/icon_a"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/iconshome" />

            <TextView
                android:id="@+id/nav_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="home"
                android:textColor="@android:color/white"
                android:textSize="19sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_news"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="2dp">

            <ImageView
                android:id="@+id/icon_b"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/iconsnews" />

            <TextView
                android:id="@+id/nav_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="news"
                android:textColor="@android:color/white"
                android:textSize="19sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_race"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="2dp">

            <ImageView
                android:id="@+id/icon_c"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/iconsflag" />

            <TextView
                android:id="@+id/nav_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="race"
                android:textColor="@android:color/white"
                android:textSize="19sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_history"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="2dp">

            <ImageView
                android:id="@+id/icon_d"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/iconshistory" />

            <TextView
                android:id="@+id/nav_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="history"
                android:textColor="@android:color/white"
                android:textSize="19sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_more"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="2dp">

            <ImageView
                android:id="@+id/icon_e"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/iconsmore" />

            <TextView
                android:id="@+id/nav_e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="more"
                android:textColor="@android:color/white"
                android:textSize="19sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
