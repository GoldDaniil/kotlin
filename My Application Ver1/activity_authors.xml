<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".AuthorsActivity">

    <TextView
        android:id="@+id/authorsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daniil Gold\nNikita Malihin"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:id="@+id/imageContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/authorsTextView"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/wedevelopers"
            android:scaleType="fitXY"
            android:layout_marginEnd="16dp"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/wedevelopers1"
            android:scaleType="fitXY"
            android:layout_marginStart="16dp"
            android:visibility="invisible"/>
    </LinearLayout>
</RelativeLayout>
