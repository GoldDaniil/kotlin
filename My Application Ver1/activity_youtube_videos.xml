<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image_granprix">

    <FrameLayout
        android:id="@+id/countryFrameLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/brown_rounded_corner_background"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/countryTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Гран При \n2024 года \n\nвыберите страну:"
            android:textSize="21sp"
            android:textColor="@android:color/white"/>
    </FrameLayout>

    <Spinner
        android:id="@+id/countrySpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/countryFrameLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/watchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Watch"
        android:textSize="20sp"
        android:layout_below="@id/countrySpinner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"/>

    <LinearLayout
        android:id="@+id/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/black"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="2dp">

        <LinearLayout
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="2dp">

            <ImageView
                android:id="@+id/icon_a"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/iconshome"/>

            <TextView
                android:id="@+id/nav_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="home"
                android:textColor="@android:color/white"
                android:textSize="19sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_news"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="2dp">

            <ImageView
                android:id="@+id/icon_b"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/iconsnews"/>

            <TextView
                android:id="@+id/nav_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="news"
                android:textColor="@android:color/white"
                android:textSize="19sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_race"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="2dp">

            <ImageView
                android:id="@+id/icon_c"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/iconsflag"/>

            <TextView
                android:id="@+id/nav_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="race"
                android:textColor="@android:color/white"
                android:textSize="19sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_history"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="2dp">

            <ImageView
                android:id="@+id/icon_d"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/iconshistory"/>

            <TextView
                android:id="@+id/nav_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="history"
                android:textColor="@android:color/white"
                android:textSize="19sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_more"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="2dp">

            <ImageView
                android:id="@+id/icon_e"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/iconsmore"/>

            <TextView
                android:id="@+id/nav_e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="more"
                android:textColor="@android:color/white"
                android:textSize="19sp"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
